<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!DOCTYPE html>
    <html lang="en">
      <%- include('../partials/head', { title: "Edit Categories"}) %>
      <body>
        <div class="container">
          <h1 class="my-4">Edit</h1>
          <h3 class="mb-3">Delete Categories</h3>
          <div class="mb-3">
            <ul class="list-group">
              <% if (categories.length > 0) { %>
              <% categories.forEach(function(category){ %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  <div><%= category.name %></div>
                  <form
                      action="/categories/<%= category.id %>?_method=DELETE"
                      method="POST"
                  >
                    <button type="submit" class="btn btn-danger"><i class="fa fa-minus mx-1"></i> Delete</button>
                  </form>
                </li>
              <% }) %>
              <% } else { %>
                <div class="alert alert-primary">No items to display</div>
              <% } %>
              </ul>
          </div>
          <a href="/" class="btn btn-secondary"
          ><i class="fa fa-arrow-left mx-1"></i> Back</a
        >
        </div>
        </div>
      </body>
    </html>
  </head>
</html>


