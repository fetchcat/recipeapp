<div class="form-group mb-3">
  <div class="d-flex flex-row justify-content-between">
    <label for="category">Category</label>
    <i class="fa fa-list"></i>
  </div>
  <select id="category" name="category" class="form-select">
    <% categories.forEach(function(cat){ %>
    <option><%- cat.name, { categories: categories } %></option>
    <% }) %>
  </select>
</div>
<div class="form-group mb-3">
  <div class="d-flex flex-row justify-content-between">
    <label for="title">Title</label>
    <i class="fa fa-i-cursor"></i>
  </div>
  <input
    required
    value="<%= recipe.title %>"
    type="text"
    name="title"
    id="title"
    class="form-control"
  />
</div>
<div class="form-group mb-3">
  <div class="d-flex flex-row justify-content-between">
    <label for="description">Description</label>
    <i class="fa fa-i-cursor"></i>
  </div>

  <input
    required
    value="<%= recipe.description %>"
    type="text"
    name="description"
    id="description"
    class="form-control"
  />
</div>
<div class="row">
  <div class="col mb-3">
    <div class="d-flex flex-row justify-content-between">
      <label for="prepTime">Prep Time</label>
      <i class="fa fa-clock"></i>
    </div>
    <input
      value="<%= recipe.prepTime %>"
      type="text"
      name="prepTime"
      id="prepTime"
      class="form-control"
    />
  </div>
  <div class="col mb-3">
    <div class="d-flex flex-row justify-content-between">
      <label for="cookTemp">Bake Time</label>
      <i class="fa fa-clock"></i>
    </div>
    <input
      value="<%= recipe.bakeTime %>"
      type="text"
      name="bakeTime"
      id="bakeTime"
      class="form-control"
    />
  </div>
  <div class="col mb-3">
    <div class="d-flex flex-row justify-content-between">
      <label for="bakeTemp">Bake Temp</label>
      <i class="fa fa-temperature-high"></i>
    </div>
    <input
      value="<%= recipe.bakeTemp %>"
      type="text"
      name="bakeTemp"
      id="bakeTemp"
      class="form-control"
    />
  </div>
</div>
<div class="form-group mb-3">
  <div class="d-flex flex-row justify-content-between">
    <label for="ingredients">Ingredients</label>
    <i class="fa-brands fa-markdown"></i>
  </div>
  <textarea
    required
    name="ingredients"
    id="ingredients"
    class="form-control"
    rows="5"
  >
<%= recipe.ingredients %></textarea
  >
</div>

<div class="form-group mb-3">
  <div class="d-flex flex-row justify-content-between">
    <label for="method">Method</label>
    <i class="fa-brands fa-markdown"></i>
  </div>
  <textarea required name="method" id="method" class="form-control" rows="5">
<%= recipe.method %></textarea
  >
</div>

<a href="/" class="btn btn-secondary"
  ><i class="fa fa-arrow-left mx-1"></i> Back</a
>
<button type="submit" class="btn btn-primary">
  <i class="fa fa-check mx-1"></i> Save
</button>
