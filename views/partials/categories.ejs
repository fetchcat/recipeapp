<form action="/categories/show/" method="GET">
  <select id="category" name="category" class="form-select mb-2">
    <% if(categories.length > 0) { %> <% categories.forEach(function(category){
    %> <% if (category.name === cat.name && cat.name !==null) { %>
    <option value="<%- category.id %>" selected="selected">
      <%- category.name, { categories: categories } %>
    </option>
    <% } else { %>
    <option value="<%- category.id %>">
      <%- category.name, { categories: categories } %>
    </option>
    <% } %> <% }) %> <% } else { %>
    <option>Add a Category</option>
    <% } %>
  </select>
  <div class="d-flex justify-content-between align-items-center">
    <div>
      <% if (categories.length > 0) { %>
      <button class="btn btn-primary" type="submit">
        <i class="fa fa-list mx-1"></i> Show Recipes
      </button>
      <a href="/categories/edit" class="btn btn-info"
        ><i class="fa fa-edit mx-1"></i> Edit Categories</a
      >
      <% } %>
    </div>
    <div>
      <a href="/categories/new" class="btn btn-success"
        ><i class="fa fa-plus mx-1"></i> New Category</a
      >
    </div>
  </div>
</form>
